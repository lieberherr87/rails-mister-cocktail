      <button class="close" data-dismiss="alert">Ã—</button>
      <%= message %>
    </div>
  <% end %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Dose</th>
          <th>Ingredient</th>
        </tr>
      </thead>
      <tbody>
        <% @cocktail.doses.each do |dose| %>
        <tr>
          <td>
            <%= dose.description %>
          <td>
            <%= dose.ingredient.name %>
          </td>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>


